{
    "manifest_version": 3,
    "version": "0.1.3",
    "name": "Bookmarks quick view",
    "description": "Bookmarks quick view",
    "author": "axarsar",
    "action": {
        "default_popup": "index.html",
        "default_title": "History quick view",
        "default_icon": {
            "16": "./images/toolbar16.png",
            "32": "./images/toolbar32.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "favicon",
        "storage",
        "tabs",
        "bookmarks"
    ]
}
